: dbg_seq.o                                        |> !lxxd |> dbg_seq
: misc.o dbgs_to_uhset.o                           |> !lxxd |> dbgs_to_uhset
: misc.o mer_hist.o                                |> !lxxd |> mer_hist
: misc.o dbg_gen.o                                 |> !lxxd |> dbg_gen

